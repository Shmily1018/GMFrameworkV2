@model GoldMantis.Web.ViewModel.UserEmailAnalysis.WF_REMINDER_WORKFLOW_TEMP.ModelVW_WF_REMINDER_WORKFLOW_TEMPIndex
@{
    Layout = null;
}
<div style="width: 100%; overflow: auto;" class="common-table-container" id="common-table-container">
    <table style="margin-top: 0px; table-layout: fixed;"
           class="table  table-responsive table-striped table-bordered table-hover"
           role="grid">
        <colgroup>
            <col style="width: 40px;" />
            <col style="width: auto;" />
            <col style="width: auto;" />
            <col style="width: auto;" />
            <col style="width: auto;" />
            <col style="width: auto;" />
        </colgroup>
        <thead class="common-table-header">
            <tr role="row">
                @Html.HiddenFor(x => x.SearchEntity.OrderName, new { data_order_name = "" })
                @Html.HiddenFor(x => x.SearchEntity.OrderDirection, new { data_order_direction = "" })
                <th style="text-align: center;">

                </th>
                <th style="text-align: center;">
                    工作流名称
                </th>
                <th style="text-align: center;">
                    单据号
                </th>
                <th style="text-align: center;">
                    被催办人
                </th>
                <th style="text-align: center;">
                    催办日期
                </th>
                <th style="text-align: center;">
                    微信内容
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.GridDataSources)
            {
                <tr role="row" style="text-align: center;">
                    <td>
                        <input type="checkbox" name="checkboxItem" class="checkboxItem" value="@i.ID" />
                    </td>
                    <td td-data-content="@i.WorkflowName">
                        <div style="white-space: nowrap; text-overflow: ellipsis; overflow: hidden; text-align: left;">
                            @i.WorkflowName
                        </div>
                    </td>

                    <td td-data-content="@i.TokenName">
                        <div style="white-space: nowrap; text-overflow: ellipsis; overflow: hidden; text-align: left;">
                            @i.TokenName
                        </div>
                    </td>

                    <td td-data-content="@i.UserName">
                        <div style="white-space: nowrap; text-overflow: ellipsis; overflow: hidden; text-align: left;">
                            @i.UserName
                        </div>
                    </td>

                    <td td-data-content="@i.SendDate.ToString("yyyy-MM-dd hh:mm:ss")">
                        <div style="white-space: nowrap; text-overflow: ellipsis; overflow: hidden;">
                            @i.SendDate.ToString("yyyy-MM-dd HH:mm:ss")
                        </div>
                    </td>

                    <td td-data-content="@i.MessageContent">
                        <div style="white-space: nowrap; text-overflow: ellipsis; overflow: hidden; text-align: left;">
                            @i.MessageContent
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        @{
            Html.RenderPartial(Url.Content("~/Views/Controls/PaginateAjax.cshtml"), Model.PaginateHelperObject);
        }
    </div>
</div>



